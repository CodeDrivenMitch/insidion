%div.row
  %div.col-md-4.col-md-offset-4.content
    %h2 Sign up
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = f.error_notification
      %div.form-inputs
        = f.input :username, required: true, autofocus: true
        = f.input :email, required: true
        = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable)
        = f.input :password_confirmation, required: true
      %h4 Personal information
      %p Most of these fields are not required, and you can fill this information in later if you want to.
      %div.form-inputs
        = f.input :first_name
        = f.input :last_name
        = f.input :gender, :as => :radio_buttons, collection: [['Male', 'm'], ['Female', 'f'], ['Unknown', 'u']]
        = f.input :birthday, :as => :date_picker, start_year: Date.today.year - 90, end_year: Date.today.year - 12, html: {class: 'datepicker'}
        = f.input :city
        = f.input :country, as: :string
        = f.input :function
        = f.input :biography
      %div.form-actions
        = f.button :submit, 'Sign up'
    = render 'devise/shared/links'